# Archivo de ejemplo para variables de entorno
# Copia este archivo como .env y configura tus valores

# =============================================================================
# CONFIGURACIÓN DE IA
# =============================================================================

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_organization_id_here

# Azure OpenAI (alternativa)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Anthropic (alternativa)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# CONFIGURACIÓN DE MEMORIA Y VECTOR STORES
# =============================================================================

# ChromaDB
CHROMA_PERSIST_DIRECTORY=./memory/vector_stores/chroma
CHROMA_COLLECTION_NAME=ia_agent_memory

# FAISS
FAISS_INDEX_PATH=./memory/vector_stores/faiss
FAISS_INDEX_NAME=ia_agent_index

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================

# Nivel de logging
LOG_LEVEL=INFO

# Archivo de log
LOG_FILE=./logs/agent.log

# =============================================================================
# CONFIGURACIÓN DE PERFORMANCE
# =============================================================================

# Límites de recursos
MAX_MEMORY_USAGE=2GB
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================

# Modo debug
DEBUG=false

# Configuración de desarrollo
DEV_MODE=false
DEV_RELOAD=true

# =============================================================================
# CONFIGURACIÓN DE TESTING
# =============================================================================

# Framework de testing por defecto
DEFAULT_TEST_FRAMEWORK=xunit

# Configuración de cobertura
COVERAGE_THRESHOLD=80
GENERATE_COVERAGE_REPORT=true

# =============================================================================
# CONFIGURACIÓN DE HERRAMIENTAS EXTERNAS
# =============================================================================

# .NET SDK
DOTNET_SDK_PATH=  # Dejar vacío para auto-detección
MSBUILD_PATH=     # Dejar vacío para auto-detección

# Git
GIT_REPO_PATH=./

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Encriptación de memoria
ENCRYPT_MEMORY=false
MEMORY_ENCRYPTION_KEY=  # Generar clave segura en producción

# Configuración de API
API_RATE_LIMIT=100
API_RATE_WINDOW=3600

# =============================================================================
# CONFIGURACIÓN DE MONITOREO
# =============================================================================

# Métricas
ENABLE_METRICS=true
METRICS_PORT=8080

# Health checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# CONFIGURACIÓN DE NOTIFICACIONES
# =============================================================================

# Email (opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=

# Webhook (opcional)
WEBHOOK_URL=
WEBHOOK_SECRET=
